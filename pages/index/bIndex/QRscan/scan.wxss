/* pages/index/bIndex/QRscan/scan.wxss */
.container{
    /* position: relative; */
      height:100%; 
}
.header{
    width: 100%;
    height: 40px;
    line-height: 40px;
    background: #eee;
    text-align: center;
}

.section{
    width: 100%;
    flex: 1;
    overflow: auto;
}

.footer{   
    width: 100%;
    background: #eee;
    display: flex;
    justify-content: space-between;
}
.footer>view{
    width: 50%;
    height: 50px;
    line-height: 50px;
    text-align: center;
}
.footer .currentView{
     background: #fff !important; 
}
.footer .reserveView{
    border-left:1px solid #ccc;
    border-right:1px solid #ccc;
}

/* 扫码按钮 */
.scanBtn{
  margin-top:20px;
  width:80%;
}
.center{
  text-align: center;
  margin:14px auto 0 auto;
}
.yonghu{
  color:#889;
}

.table {
  border: 1px solid #efefef;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
    width:30%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 30%;
  justify-content: center;
  background: #983;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}

.scanPass{
  margin-bottom: 15px;
}